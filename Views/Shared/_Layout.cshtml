<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RepostIt</title>
    <!--Bootstrap-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--Custom CSS-->
    <link href="~/content/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!--Icon-->
    <link href="~/fontawesome/css/all.css" rel="stylesheet" />
    <!--Material Design-->
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.16.0/css/mdb.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/69c4273e2a.js" crossorigin="anonymous"></script>
</head>
<body>

    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
            <div class="flex-grow-1">
                @await Component.InvokeAsync("NToastNotify")
                <a aria-label="Home" class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="reddit-icon-svg">
                        <g>
                            <circle fill="#FF4500" cx="10" cy="10" r="10"></circle>
                            <path fill="#FFF"
                                  d="M16.67,10A1.46,1.46,0,0,0,14.2,9a7.12,7.12,0,0,0-3.85-1.23L11,4.65,13.14,5.1a1,1,0,1,0,.13-0.61L10.82,4a0.31,0.31,0,0,0-.37.24L9.71,7.71a7.14,7.14,0,0,0-3.9,1.23A1.46,1.46,0,1,0,4.2,11.33a2.87,2.87,0,0,0,0,.44c0,2.24,2.61,4.06,5.83,4.06s5.83-1.82,5.83-4.06a2.87,2.87,0,0,0,0-.44A1.46,1.46,0,0,0,16.67,10Zm-10,1a1,1,0,1,1,1,1A1,1,0,0,1,6.67,11Zm5.81,2.75a3.84,3.84,0,0,1-2.47.77,3.84,3.84,0,0,1-2.47-.77,0.27,0.27,0,0,1,.38-0.38A3.27,3.27,0,0,0,10,14a3.28,3.28,0,0,0,2.09-.61A0.27,0.27,0,1,1,12.48,13.79Zm-0.18-1.71a1,1,0,1,1,1-1A1,1,0,0,1,12.29,12.08Z">
                            </path>
                        </g>
                    </svg>
                    <span class="reddit-text">
                        RepostIt
                    </span>
                </a>
            </div>
            <div class="flex-grow-1 float-right">
                <div class="float-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div>
                            <a routerLink="/sign-up" class="float-right sign-up mr-2" asp-area="" asp-controller="LoginRegister" asp-action="Register">Sign up</a>
                            <a routerLink="/login" class="float-right login mr-2" asp-area="" asp-controller="LoginRegister" asp-action="Login">Login</a>
                        </div>
                    }
                    else
                    {
                        <div class="flex-grow-1 float-left" style="align-items:center">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="Index">Posts</a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link" asp-area="" asp-controller="Comments" asp-action="Index">Comments</a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link" asp-area="" asp-controller="Communities" asp-action="Index">Communities</a>
                                </li>

                            </ul>

                        </div>
                        <!-- Example single danger button -->
                        <div class="btn-group">
                            <a class="userdetails dropdown-toggle" id="dropdownBasic1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <strong> @User.Identity.Name</strong>
                                <img class="account-icon" src="https://www.redditstatic.com/avatars/avatar_default_08_D4E815.png">
                            </a>
                            <div class="dropdown-menu">

                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="profile">Profile</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                <div class="dropdown-divider"></div>
                                <a type="button" class="dropdown-item" asp-area="" asp-controller="LoginRegister" asp-action="LogOut">LogOut</a>

                            </div>
                        </div>



                    }


                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - RepostIt - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.16.0/js/mdb.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
