@model RepostIt.Models.Community

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Community</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="communityType" class="control-label"></label>
                <input asp-for="communityType" class="form-control" />
                <span asp-validation-for="communityType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group">

                <input type="hidden" value="@User.Identity.Name" asp-for="name" class="form-control" />

            </div>
        </form>
    </div>
</div>

<div>
    <a type="button" class="btn btn-outline-danger" asp-action="Index"><i class="fas fa-arrow-left"></i>Back to List</a>
</div>

