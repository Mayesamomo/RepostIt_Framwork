
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>


    <form action="/LoginRegister/Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label name="username" class="control-label">Username</label>
            <input name="username" required class="form-control" />
        </div>
        <div class="form-group">
            <label name="email" class="control-label">Email</label>
            <input name="email" required class="form-control" />
        </div>
    
        <div class="form-group">
            <label name="password" class="control-label">Password</label>
            <input name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required type="password" class="form-control" />
        </div>
        <span class="text-danger">@ViewBag.Message</span>
        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-primary" />
            <a type="button" class="btn btn-outline-danger btn-sm" asp-action="Login">Back</a>
        </div>
    </form>

