
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
@ViewBag.Result
<form action="/LoginRegister/Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label name="username" class="control-label">Username</label>
        <input name="username" required class="form-control" />

    </div>
    <div class="form-group">
        <label name="password" class="control-label">Password</label>
        <input name="password"  required type="password" class="form-control" />

    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-primary" />
        <a asp-action="Register">Back</a>
    </div>
</form>


